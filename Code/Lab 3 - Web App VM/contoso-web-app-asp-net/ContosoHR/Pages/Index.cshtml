@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/lib/jqueryui/jquery-ui.css" rel="stylesheet" />
@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/employeeDatatable.js"></script>
}
<div class="container">
    <div style="margin-bottom: 15px">
        <label for="amount">Salary range:</label>
        <input type="text" id="amount" readonly style="border:0; color: rebeccapurple; font-weight:bold;">
    </div>
    <div style="margin-bottom: 30px; padding: 10px">
        <div id="slider-range"></div>
    </div>
    <div style="width:100%">
        <table id="employeeDatatable" class="table table-striped table-bordered table-sm dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>EmployeeId</th>
                    <th>Ssn</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Salary</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
